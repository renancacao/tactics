<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SoldierItemStatsText">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="SoldierBrFaText" parent="SoldierItemStatsText">
        <item name="android:textSize">8sp</item>
    </style>

    <style name="ItemSquare">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
    </style>

    <style name="SoldierItemStatsText.Portrait">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SoldierItemStatsText.Portrait.Labels">
        <item name="android:layout_width">40dp</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="SoldierItemStatsText.Portrait.CurrentStatus">
        <item name="android:layout_width">34dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="SoldierItemStatsText.Portrait.TotalStatus">
        <item name="android:layout_width">34dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">1dp</item>
    </style>

    <style name="SoldierItemStatsText.Portrait.Bar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">1dp</item>
    </style>

    <style name="FrontText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="StatsText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="FrontStats">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
    </style>
</resources>